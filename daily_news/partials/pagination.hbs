<!-- start pagination -->
<div class="pagination-wrap">
	<div class="pagination clearfix" role="navigation">
		{{#if prev}}
		<a class="newer-posts" href="{{page_url prev}}"> <i class="fa fa-angle-left fa-fw"></i> <span>Newer</span></a>
		{{/if}}
        {{#if next}}
        <a class="older-posts" href="{{page_url next}}"><span>Older</span> <i class="fa fa-angle-right fa-fw"></i></a>
        {{/if}}
    </div>
</div>
<!-- end pagination -->